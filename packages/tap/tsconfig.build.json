{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "es6",
    "target": "es2018",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "declarationMap": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}
