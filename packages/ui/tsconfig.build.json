{
  "compilerOptions": {
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "lib",
    "plugins": [
      // { "transform": "typescript-transform-paths" },
      // { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "**/*.spec.ts"
  ]
}
